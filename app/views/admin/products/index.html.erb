<h2>Product List</h2>

<div class="pull-right" style="margin-bottom: 20px;">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-primary btn-md") %>
</div>

<table class="table table-bordered">

   <thead>
     <tr>
       <td>#</td>
       <td width="100">Pro Pic</td>
       <td>名称</td>

       <td>库存</td>
       <td>价格</td>
       <td>选项</td>
     </tr>
   </thead>
   <tbody>
     <% @products.each do |product| %>
     <tr>
       <td><%= product.id %></td>
       <td>
         <%= link_to product_path(product) do %>
          <% if product.image.present? %>
           <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
           <% else %>
           <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
         <% end %>
       </td>
       <td><%= product.title %></td>

       <td><%= product.quantity %></td>
       <td><%= product.price %></td>
       <td>
         <%= link_to("编辑", edit_admin_product_path(product), :class => "btn btn-primary btn-sm") %>
         <%= link_to("删除", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
        </td>
     </tr>
       <% end %>
   </tbody>

</table>
