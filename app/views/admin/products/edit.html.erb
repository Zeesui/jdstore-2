<h2>编辑</h2>

<%= simple_form_for [:admin, @product] do |f| %>
<%= f.input :title, :label => "名称" %>
<%= f.input :description, :label => "描述" %>
<%= f.input :quantity, :label => "库存" %>
<%= f.input :price, :label => "价格" %>

<% if @product.image.present? %>
  <span>目前商品图</span><br>
  <%= image_tag(@product.image.thumn.url) %>
<% end %>
<div class="group">
  <%= f.input :image, as: :file %>
</div>
<%= f.submit "Submit", class: "btn btn-primary btn-md" %>

<% end %>
